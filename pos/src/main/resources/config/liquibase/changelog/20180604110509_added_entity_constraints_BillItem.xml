        <addForeignKeyConstraint baseColumnNames="bill_no_id"
                                 baseTableName="bill_item"
                                 constraintName="fk_bill_item_bill_no_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bill"/>

    </changeSet>
</databaseChangeLog>
